<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d3e50"
    tools:context="com.example.administrator.freakingmatch.MainActivity">

    <TextView
        android:textColor="#ffff"
        android:id="@+id/textviewdiem"
        android:layout_marginRight="10dp"
        android:textSize="50sp"
        android:text="0"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <SeekBar
        android:id="@+id/seekbarthoigian"
        android:layout_below="@+id/textviewdiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.constraint.ConstraintLayout
        android:layout_below="@+id/seekbarthoigian"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            app:layout_constraintVertical_bias="0.1"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.2"
            android:id="@+id/textviewsothu1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#fff"
            android:textSize="90sp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.2"
            android:id="@+id/textviewpheptinh"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textviewsothu1"
            android:textColor="#fff"
            android:textSize="90sp"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.75"
            android:id="@+id/textviewsothu2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#fff"
            android:textSize="90sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewketqua"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="#fff"
            android:textSize="90sp"
            android:text="= 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="40sp"
            android:text="-10"
            android:background="#ffff"
            android:id="@+id/textviewgiatri1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toBottomOf="@+id/textviewketqua"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:textColor="#3848b1" />
        <TextView
            android:gravity="center"
            android:textColor="#3848b1"
            android:text="+10"
            android:textSize="40sp"
            android:id="@+id/textviewgiatri2"
            android:background="#ffff"
            app:layout_constraintTop_toBottomOf="@+id/textviewketqua"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="150dp"
            android:layout_height="135dp" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
